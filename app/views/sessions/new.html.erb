<div class='offset-4 col-4 text-center'>
	<%= form_for :session, url: login_path do |f| %>
  		<%= f.text_field :email, placeholder: 'Email', :required => 'required', class:"form-control" %><br />
  		<%= f.password_field :password, placeholder: "Mot de passe", :required => 'required', class:"form-control" %><br />
		<%= f.submit "S'enregistrer", class: 'form-group btn btn-info'%>
	<% end %>
</div>

<div class='offset-4 col-4 text-center'>
	<%= link_to "Je ne suis pas encore inscrit ?", signup_path, class: "btn btn-link m-auto" %>
</div>
